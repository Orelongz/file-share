<%= link_to 'View All Uploaded Files', root_path, class: 'btn' %>

<h1 class='text-center mt-5'>Upload a new file</h1>

<%= form_with(model: @document, local: true, class: 'new-upload') do |form| %>

  <div class="form-group">
    <%= form.label :files %>
    <%= form.file_field :files, multiple: true, direct_upload: true, class: "form-control-file" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>
  <%= form.submit 'Upload File', class: 'btn btn-primary w-100 mt-3' %>
<% end %>
